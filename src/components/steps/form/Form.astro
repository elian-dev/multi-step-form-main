---
import Input from "./Input.astro";

---
<section class="form">
    <h2 class="form__title">Personal info</h2>
    <p class="form__legend">Please provide your name, email address, and phone number.</p>
    <form class="form__section">
        <Input name="name" type="text" placeholder="e.g.Stephen king" label="Name" />
        <Input name="email" type="text" placeholder="e.g.stephenking@lorem.com" label="Email address" />
        <Input name="phone" type="number" placeholder="e.g.+1 234 567 890" label="Phone number" />
    </form>
</section>

<style lang="scss">
    .form {
        padding: 0 2rem;
        width: max-content;
        &__title {
            font-size: var(--heading);
            margin: 0;
            padding: 0;
        }

        &__legend {
            font-size: var(--body-l);
            color: var(--grey);
            line-height: 20px;
        }

        &__section {
            display: flex;
            flex-direction: column;
            width: 100%;
        }
    }
</style>