---
	import StepWrapper from './steps/StepWrapper.astro';
	import Bar from './sidebar/Bar.astro';

	const STEPS = [
		{	
			id: 1,
			step: 'Your info',
			component: 'Form',
		},
		{	
			id: 2,
			step: 'Select plan',
			component: 'Plans',
		},
		{
			id: 3,
			step: 'Add-ons',
			component: 'Addons',
		},
		{
			id: 4,
			step: 'Summary',
			component: 'Summary',
		},
		{
			id: 5,
			step: 'Thanks',
			component: 'thanks',
		},
	];
---

<section class="main-card">
	<!-- Sidebar -->
	<Bar steps={STEPS} />

	<!-- Steps -->
	<StepWrapper steps={STEPS} />
</section>

<style lang="scss">
	.main-card {
		width: 800px;
		height: 500px;
		background-color: var(--white);
		border-radius: 15px;
		padding: 1rem;
		display: flex;
		@media screen and (max-width: 500px) {
			flex-direction: column;
			width: 100%;
			height: 100%;
			background-color: transparent;
			padding: 0;
		}
	}
</style>
