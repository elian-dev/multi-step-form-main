---
export interface Props {
	title: string;
}

const { title } = Astro.props;
---
<!DOCTYPE html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description">
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" sizes="32x32" type="image/png" href="/favicon-32x32.png" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<slot />
		<script src="/assets/js/script.js" type="module"></script>
		<script>
			import { setData } from '../scripts/state/setData.js';
			setData();
		</script>
	</body>
</html>

<style lang="scss" is:global>
	:root {
		/* Color styles */
		--b-g: rgba(239, 245, 255, 1);
		--border-color: rgba(214, 217, 230, 1);
		--denim: rgba(2, 41, 89, 1);
		--grey: rgba(150, 153, 170, 1);
		--light-blue: rgba(171, 188, 255, 1);
		--light-grey: rgba(214, 217, 230, 1);
		--orange: rgba(255, 175, 126, 1);
		--pink: rgba(249, 129, 142, 1);
		--purple: rgba(72, 62, 255, 1);
		--red-errors: rgba(238, 55, 74, 1);
		--sky-blue: rgba(190, 226, 253, 1);
		--very-light-grey: rgba(248, 249, 255, 1);
		--white: rgba(255, 255, 255, 1);

		/* Text-size styles */
		/* base size: body--l (16px) */
		--heading: 2rem;
		--body-l: 1rem;
		--body-m: 0.88rem;
		--body-s: 0.75rem;
	}

	@font-face {
		font-family: 'Ubuntu';
		src: url('/assets/fonts/Ubuntu-Bold.ttf') format('truetype');
		font-weight: bold;
		font-style: normal;
	}

	@font-face {
		font-family: 'Ubuntu';
		src: url('/assets/fonts/Ubuntu-Medium.ttf') format('truetype');
		font-weight: 500;
		font-style: normal;
	}

	@font-face {
		font-family: 'Ubuntu';
		src: url('/assets/fonts/Ubuntu-Regular.ttf') format('truetype');
		font-weight: normal;
		font-style: normal;
	}

	html {
		font-family: 'Ubuntu', sans-serif;
		background-color: var(--b-g);
	}

	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}

	body {
		background-color: var(--b-g);
		margin: 0;
		padding: 0;
		position: relative;
	}

	main {
		margin: auto;
		padding: 1.5rem;
		max-width: fit-content;

		@media screen and (max-width: 500px) {
			width: 100%;
			max-width: 100%;
			margin: 0;
			padding: 0;
		}
	}

	.error {
        color: var(--red-errors);
        font-size: var(--body-s);
        font-weight: 700;

        position: absolute;
        right: 0;
    }

	.section {
		display: flex;
		flex-direction: column;
		padding: 2rem 5rem;
		&__next {
			margin-top: 2rem;
			margin-left: auto;
			padding: 0.5rem 1rem;
			width: fit-content;
			height: 2.5rem;
			background-color: var(--denim);
			border: none;
			border-radius: 8px;
			color: var(--white);
			font-size: var(--body-l);
			font-weight: 700;
			cursor: pointer;
			transition: all 0.3s ease-in-out;
			&--container {
				margin-left: auto;
			}
			@media screen and (max-width: 500px) {
				margin: 1rem 0.5rem;
				&--container {
					width: 100%;
					display: flex;
					align-items: center;
					justify-content: flex-end;
					position: fixed;
					bottom: 0;
					left: 0;
					background-color: var(--white);
				}
			}
		}

		@media screen and (max-width: 500px) {
			padding: 0;
		}
	}
</style>
